{
  "compilerOptions": {
    "target": "es5",
    "module": "none",
    "outDir": "../../magnolia/light-modules/main/webresources/workers/",
    "lib": ["webworker", "es2015", "es2016", "es2017"],
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": [],
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.bak.ts"
  ]
}
